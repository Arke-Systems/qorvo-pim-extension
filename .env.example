# Qorvo PIM API (server-side only)
PIM_API_BASE=https://pim.example.qorvo.com/api
PIM_API_KEY=REPLACE_ME
PIM_BASIC_USER=
PIM_BASIC_PASS=

# Override the product endpoint path (defaults to /GetProductCatalogForSitecore)
PIM_PRODUCTS_PATH=/GetProductCatalogForSitecore
# Default query appended to product endpoint (language, format, etc.)
PIM_PRODUCTS_DEFAULT_QUERY=language=en&format=json

# Enable local mock dataset (set to 1 to bypass real PIM calls)
PIM_MOCK=0
